{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "typeRoots": ["./node_modules/@types", "./src/types"],
      "types": ["node", "express"]
    }
  },
  "include": ["src/**/*"]
}
